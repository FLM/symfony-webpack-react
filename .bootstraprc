---
# Output debugging info
# loglevel: debug

# Major version of Bootstrap: 3 or 4
bootstrapVersion: 3

# Webpack loaders, order matters
styleLoaders:
  - style
  - css
  - sass

# Customize Bootstrap variables that get imported before the original Bootstrap variables.
preBootstrapCustomizations: app/Resources/js/css/variables.scss

# This gets loaded after bootstrap/variables is loaded
#bootstrapCustomizations: app/Resources/client/theme/bootstrap.variables.scss

# Import your custom styles here
appStyles: app/Resources/js/css/app.scss

### Bootstrap styles
styles:

  # Mixins
  mixins: true

  # Reset and dependencies
  normalize: true
  print: true
  glyphicons: true

  # Core CSS
  scaffolding: true
  type: true
  code: true
  grid: true
  tables: true
  forms: true
  buttons: true

  # Components
  component-animations: true
  dropdowns: true
  button-groups: true
  input-groups: true
  navs: true
  navbar: true
  breadcrumbs: true
  pagination: true
  pager: true
  labels: true
  badges: true
  jumbotron: true
  thumbnails: true
  alerts: true
  progress-bars: true
  media: true
  list-group: true
  panels: true
  wells: true
  responsive-embed: true
  close: true

  # Components w/ JavaScript
  modals: true
  tooltip: true
  popovers: true
  carousel: true

  # Utility classes
  utilities: true
  responsive-utilities: true

### Bootstrap scripts
scripts:
  transition: false
  alert: false
  button: false
  carousel: false
  collapse: false
  dropdown: false
  modal: false
  tooltip: false
  popover: false
  scrollspy: false
  tab: false
  affix: false
